<div>
  <h1>New Messges</h1>
  <%= turbo_frame_tag "new_message", target: "_top" do %>
  <%= form_with model: [ @message.room, @message], data:{controller: "reset_form", action: "turbo:submit-end->reset-form#reset"}    do |f|%>
    <div class="form-outline mb-4">
      <%= f.label 'content', class: "form-label"%>
      <%= f.text_field :content, class: "form-control form-control-lg" %>
    </div>
   
    <div  class="d-flex justify-content-center">
      <%= f.submit class:"btn btn-success btn-block btn-lg gradient-custom-4 text-body"%>
    </div>
  <% end %>
    <%= link_to "Back", @message.room %>
  <% end %>
</div>